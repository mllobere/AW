{# src/AWBundle/Resources/views/Default/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        {% stylesheets '@AWBundle/Resources/views/Default/aw.css'%}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% block script %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
         {% endblock %}
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}AW Platform{% endblock %}</title>
    </head>

    <body>

        <div id="header">
            {% if app.user is not null %}
              Hi, {{ app.user.username }} <a href="{{ path('fos_user_security_logout') }}">logout</a>
            {% else %}
               <a href="{{ path('fos_user_security_login') }}">Please login</a>
            {% endif %}

            {% block header %}  {% endblock %}
        </div>

        <div id="create">
            <h1> CREATE AW </h1>
            {% block create %}  {% endblock %}
        </div>

        <div id="list">
            <h2> LIST AW </h2>
            {% block list %}  {% endblock %}
        </div>

        <p> I am the king of the web design, am I not ? </p>
    </body>
</html>
